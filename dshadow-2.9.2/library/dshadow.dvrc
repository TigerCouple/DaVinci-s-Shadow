		return(null)
	}

	sourceseries = $1
	origin = $2

	fv = "min"

	if(HasValue(favour) == 1) {
		if (favour == "max") {
			fv = "max"
		}
	}

	if ((dim(sourceseries)[2,1,1] > 1) || (dim(sourceseries)[3,1,1] > 1)) {
		printf("\nError: the ffv1d() function only supports one-dimensional arrays with the data present along the x-axis.\n")
		return(null)
	}

	if (dim(sourceseries)[1,1,1] == 1) {
		printf("\nThere is only one element in the array. The output is identical to the input.\n")
		return($1)
	}

	if (dim(sourceseries)[1,1,1] == 0) {
		printf("\nError: there is no data in the array.\n")
		return($1)
	}

	seriesmax = max(sourceseries, axis=x)
	seriesmin = min(sourceseries, axis=x)

	if (fv == "min") {
		if (abs(seriesmax - origin) > abs(seriesmin - origin)) {
			return(seriesmax)
		}
		return(seriesmin)
	} else {
		if (abs(seriesmax - origin) < abs(seriesmin - origin)) {
			return(seriesmin)
		}
		return(seriesmax)
	}
}


define ctv1d(favour)
{
	if ($ARGC != 2) {
		printf("\nReturns the value out of a one-dimensional set which is closest to the value of the second variable. ")
		printf("\n")
		printf("$1 = the input set\n")
		printf("$2 = the value which the return value will be closest to out of the input set.\n")
		printf("favour = which of \"min\" or \"max\" to favour if they are of equal distance from the specified value (default = \"min\")\n")
		return(null)
	}

	sourceseries = $1
	origin = $2

	fv = "min"

	if(HasValue(favour) == 1) {
		if (favour == "max") {
			fv = "max"
		}
	}

	if ((dim(sourceseries)[2,1,1] > 1) || (dim(sourceseries)[3,1,1] > 1)) {
		printf("\nError: the ctv1d() function only supports one-dimensional arrays with the data present along the x-axis.\n")
		return(null)
	}

	if (dim(sourceseries)[1,1,1] == 1) {
		printf("\nThere is only one element in the array. The output is identical to the input.\n")
		return($1)
	}

	if (dim(sourceseries)[1,1,1] == 0) {
		printf("\nError: there is no data in the array.\n")
		return($1)
	}

	seriescount = dim(sourceseries)[1,1,1]
	currentelement = 1
	currentctv = sourceseries[1,1,1]
	while (currentelement <= seriescount) {
		if (abs(currentctv - origin) == abs(sourceseries[currentelement,1,1] - origin)) {
			if (fv == "min") {
				if (currentctv < sourceseries[currentelement,1,1]) {
					# do nothing - currentctv is already the minimum value
				} else {
					currentctv = sourceseries[currentelement,1,1]
				}
			} else {
				if (currentctv > sourceseries[currentelement,1,1]) {
					# do nothing - currentctv is already the maximum value
				} else {
					currentctv = sourceseries[currentelement,1,1]
				}
			}
		} else {
			if (abs(currentctv - origin) > abs(sourceseries[currentelement,1,1] - origin)) {
				currentctv = sourceseries[currentelement,1,1]
			}
		}
		currentelement++
	}

	return(currentctv)
}

