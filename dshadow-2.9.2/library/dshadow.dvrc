				xcurrent++
			}
			zcurrent++
		}
	}


	if(calcaxis == "z") {
		if (zmax == 1) {
			return(inval)
		}

		outval = inval[0,0,1]

		xcurrent = xmin
		ycurrent = ymin

		while (ycurrent <= ymax) {
