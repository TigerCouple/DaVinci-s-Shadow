define clipfloat()
{
	if($ARGC != 1) {
		printf("\nClips the values of the input object to a range of 0.0 - 1.0.\n")
		return(null)
	}

	inval = $1

	clip = inval[0,0,1]

	currentplane = 0
	maxplane = dim(inval)
	maxplane = maxplane[3,1,1] + 1

	outval = inval

	while (currentplane < maxplane) {
		clip[0,0,0] = 0.0
		outvaltemp = cat(clip, outval[0,0,currentplane], axis = z)
		outvaltemp = max(outvaltemp, axis = z)
		outval[0,0,currentplane] = outvaltemp

		clip[0,0,0] = 1.0
		outvaltemp = cat(clip, outval[0,0,currentplane], axis = z)
		outvaltemp = min(outvaltemp, axis = z)
		outval[0,0,currentplane] = outvaltemp
		currentplane = currentplane + 1
	}

	return(outval)
}

