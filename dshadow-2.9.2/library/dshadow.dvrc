  maxy=dim[2]-int(ys/2)   
  if(dim[1]<xs) maxx=dim[1]
  if(dim[2]<ys) maxy=dim[2] 

  #loop through x to get x-direction
  for(i=1;i<=maxx;i+=int(xs/2)) {

