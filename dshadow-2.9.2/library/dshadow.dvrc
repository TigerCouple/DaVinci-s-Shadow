define getaxisbeam(axis, x, y, z)
{
	if($ARGC == 0) {
		printf("\nIsolates the one-dimensional set of data along the specified axis of a multidimensional set and places it along the X-axis of a new set.\n")
		printf("\n")
		printf("$1 = the input set\n")
		printf("axis = axis to calculate along (required)\n")
		printf("x = X coordinate in the input set\n")
		printf("y = Y coordinate in the input set\n")
		printf("z = Z coordinate in the input set\n")
		printf("Two (and only two) coordinates must be specified.\n")
		return(null)
	}

	inval = $1

	sourceaxis = "z"

	if(HasValue(axis) == 1) {
		sourceaxis = getaxisfromstring(axis)
		if (HasValue(sourceaxis) == 0) {
			printf("\nError: the axis name '%s' is not recognized by this function.\n", axis)
			return(null)
		}
	} else {
		printf("\nError: no axis name was specified.\n")
		return(null)
	}

	if(sourceaxis == "x") {
		if ((HasValue(y) == 0) || (HasValue(z) == 0)) {
			printf("\nError: the y and z coordinates must be specified when isolating data along the x axis.\n", axis)
		}
		return(inval[0,y,z])
	}

	if(sourceaxis == "y") {
		if ((HasValue(x) == 0) || (HasValue(z) == 0)) {
			printf("\nError: the x and z coordinates must be specified when isolating data along the y axis.\n", axis)
		}
		beamdata = inval[x,0,z]
		beamsize = dim(beamdata)[2,1,1]
		outval = clone(beamdata[1,1,1], beamsize, 1, 1)
		currentposition = 1
		while (currentposition <= beamsize) {
			outval[currentposition,1,1] = beamdata[1,currentposition,1]
			currentposition++
		}
		return(outval)
	}

	if(sourceaxis == "z") {
		if ((HasValue(x) == 0) || (HasValue(y) == 0)) {
			printf("\nError: the x and y coordinates must be specified when isolating data along the z axis.\n", axis)
		}
		beamdata = inval[x,y,0]
		beamsize = dim(beamdata)[3,1,1]
		outval = clone(beamdata[1,1,1], beamsize, 1, 1)
		currentposition = 1
		while (currentposition <= beamsize) {
			outval[currentposition,1,1] = beamdata[1,1,currentposition]
			currentposition++
		}
		return(outval)
	}
}

