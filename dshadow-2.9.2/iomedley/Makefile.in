prefix=@prefix@
exec_prefix=@exec_prefix@
libdir=@libdir@

SHELL = /bin/sh

LIBTIFF = libtiff.a
LIBTIFFDIR = libtiff-3.9.5

LIBJPEG = libjpeg.a
LIBJPEGDIR = libjpeg

LIBGIF = libgif.a
LIBGIFDIR = libgif

LIBPNG = libpng.a
LIBPNGOBJ = @libpng@
LIBPNGDIR = @libpngdir@

CC=@CC@
DEFS=@DEFS@
CPPFLAGS=-I. -I$(LIBTIFFDIR)/libtiff -I$(LIBJPEGDIR) -I$(LIBGIFDIR) @CPPFLAGS@
# X_CFLAGS=@X_CFLAGS@
# X_PRE_LIBS=@X_PRE_LIBS@
# X_LIBS=@X_LIBS@
# X_EXTRA_LIBS=@X_EXTRA_LIBS@
CFLAGS=@CFLAGS@ $(X_CFLAGS) -g
# LDLIBS=@LDFLAGS@ @LIBS@ $(X_PRE_LIBS) $(X_LIBS) $(X_EXTRA_LIBS)
LDLIBS=@LDFLAGS@ @LIBS@
RANLIB=@RANLIB@
AR=@AR@
INSTALL=@INSTALL@
INSTALL_PROGRAM=${INSTALL}
INSTALL_DIR=${INSTALL} -d
INSTALL_DATA=${INSTALL} -m 644

LIBIOMEDLEY = libiomedley.a

OBJS= \
	io_aviris.o \
	io_goes.o \
	io_grd.o \
	io_imath.o \
	io_isis.o \
	io_lablib3.o \
	io_gif.o \
	io_png.o \
	io_jpeg.o \
	io_tiff.o \
	io_pnm.o \
	io_bmp.o \
	io_vicar.o \
	io_ers.o \
	io_raw.o \
	io_envi.o \
	iomedley.o \
	tools.o

all: $(LIBIOMEDLEY)

test: test.c $(LIBIOMEDLEY)
	$(CC) -g test.c -L. -ljpeg -liomedley -lz -lm -o $@

$(LIBIOMEDLEY):	$(OBJS) $(LIBTIFF) $(LIBJPEG) $(LIBGIF) $(LIBPNGOBJ)
	ar -ruv $@ $(OBJS)
	./mungelibs
	$(RANLIB) $@

.c.o:
	$(CC) -c $(DEFS) $(CPPFLAGS) $(CFLAGS) $<

$(LIBGIF):
	cd $(LIBGIFDIR) && $(MAKE)

$(LIBTIFF):
	cd $(LIBTIFFDIR) && $(MAKE)

$(LIBPNG):
	cd $(LIBPNGDIR) && $(MAKE) all

$(LIBJPEG):
	cd $(LIBJPEGDIR) && $(MAKE) $(LIBJPEG)

clean:
	rm -f *.o $(LIBIOMEDLEY)
	cd $(LIBTIFFDIR) && make clean && rm -f $(LIBTIFF) &&  cd ..
	cd $(LIBPNGDIR) && make clean && cd ..
	cd $(LIBJPEGDIR) && make clean && cd ..
	cd $(LIBGIFDIR) && make clean && cd ..

## $(libdir):
## 	install -d $(libdir)

install: all
	-$(INSTALL_DIR) $(DESTDIR)$(libdir)
	$(INSTALL_DATA) $(LIBIOMEDLEY) $(DESTDIR)$(libdir)

DISTFILES= \
	io_aviris.c \
	io_bmp.c \
	io_envi.c \
	io_ers.c \
	io_gif.c \
	io_goes.c \
	io_grd.c \
	io_imath.c \
	io_isis.c \
	io_jpeg.c \
	io_lablib3.c \
	io_png.c \
	io_pnm.c \
	io_raw.c \
	io_tiff.c \
	io_vicar.c \
	iomedley.c \
	test.c \
	tools.c \
	configwin.h \
	header.h \
	io_envi.h \
	io_lablib3.h \
	iom_config.h \
	iomedley.h \
	toolbox.h \
	tools.h \
	Makefile \
	Makefile.in \
	Makefile.min \
	Makefile.win \
	config.guess \
	config.sub \
	configure \
	configure.ac \
	configwin.h \
	README

distdir:
	rm -rf $(distdir)
	mkdir $(distdir)
	cp $(DISTFILES) $(distdir)
	cd $(LIBGIFDIR) && $(MAKE) distdir=$(distdir)/$(LIBGIFDIR) distdir
	cd $(LIBTIFFDIR) && $(MAKE) distdir=$(distdir)/$(LIBTIFFDIR) distdir
	cd $(LIBPNGDIR) && $(MAKE) distdir=$(distdir)/$(LIBPNGDIR) distdir
	cd $(LIBJPEGDIR) && $(MAKE) distdir=$(distdir)/$(LIBJPEGDIR) distdir

io_aviris.o: io_aviris.c iomedley.h io_lablib3.h toolbox.h
io_envi.o: io_envi.c io_envi.h iomedley.h io_lablib3.h toolbox.h
